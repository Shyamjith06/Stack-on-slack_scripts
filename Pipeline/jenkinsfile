node {
     properties([parameters([string(defaultValue: '', description: 'Select the QA number to build', name: 'QA_BUILD_NUMBER', trim: false)])])
     
     
  stage('Git-Checkout') {
   sh 'rm -rf devops-pipeline'
   sh 'git clone -b staging https://devops311@bitbucket.org/accelerators-devops/devops-pipeline.git'
  }
  stage('Creating a folder to store artifacts'){
    sh label: '',script: "mkdir -p /var/lib/jenkins/workspace/war-storage-uat"
    
    }
    

 dir(project_path) {
 stage(' Downloading Jar From Artifactory Locally To Deploy'){
    echo "Deploying to Staging with latest QA artifact, accessing latest QA build number ${params.QA_BUILD_NUMBER}"
    def server= Artifactory.server 'Artifactory'
    def downloadSpec = """{
    "files": [
    {
      "pattern": "debit-card-application-testing/${params.QA_BUILD_NUMBER}/*.war",
      "target": "/var/lib/jenkins/workspace/war-storage-uat/"
      
    }
    ]
    }"""
    server.download(downloadSpec)
    
    
   }
 stage('Jfrog Artifacory Upload') {
        echo "Updating Prod artifact with latest QA artifact${params.QA_BUILD_NUMBER}"
        def server= Artifactory.server 'Artifactory'
                    def uploadSpec= """{
                        "files": [{
                        "pattern": "/var/lib/jenkins/workspace/war-storage-uat/*.war",
                        "target": "debit-card-application-staging/${params.QA_BUILD_NUMBER}/"}]
                    }"""
        server.upload(uploadSpec)
       
        }
        
def project_path="devops-pipeline/Ansible"
dir(playbook_path) {
stage('Deploying To Staging') {
sh label: 'Ansible', script: 'ansible-playbook -i inventory -u staging playbook.yml'
}
}

